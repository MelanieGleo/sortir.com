<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>{% block title %}Sortir.com{% endblock %}</title>

{#     <link rel="stylesheet" href="{{ asset('css/bootstrap/bootstrap.css') }}">#}
{#    <link rel="icon" href="{{ asset('images/favicon.ico') }}">#}

    {{ encore_entry_link_tags('app') }}
    {% block css %}  {% endblock %}
</head>

<body>
{% block bandeau %}

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{ path ('app_sortie') }}">Sortir.com</a>

            {% block lien %}
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        {% if app.user %}
                            <li class="nav-item active">
                                <a class="nav-link" href="{{ path('app_index') }}">Home
                                    <span class="sr-only">(current)</span>
                                </a>
                            </li>
                            {% if app.user.administrateur %}
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('app_register') }}">Inscrire un participant</a>
                                </li>
                            {% endif %}

                            {% block autreLienProfil %}
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('app_profil') }}"> Mon profil </a>
                                </li>
                            {% endblock %}

                            <li class="nav-item">
                                <a class="nav-link" href="{{ path ('app_ajoutSortie') }}">Ajouter une Sortie</a>
                            </li>

                            {# <span>Participant: {{ app.user.prenom|first|upper }}{{ app.user.prenom|slice(1)|lower }} {{ app.user.nom|first|upper }} . </span> #}
                            {# <span>Date du jour: {{ "now"|date("m/d/Y") }}</span> #}

                        {% else %}
                            <li class="nav-item">
                                <a class="nav-link" href=" {{ path ('app_login') }}">Connexion</a>
                            </li>
                        {% endif %}
                    </ul>
                    {% if app.user %}
                        <form class="form-inline my-2 my-lg-0">
                            <label>
                                <input class="form-control mr-sm-2" type="text" placeholder="Rechercher">
                            </label>
                            <button class="btn btn-secondary my-2 my-sm-0" type="submit">Rechercher</button>
                        </form>
                    {% endif %}
                </div>
            {% endblock %}
        </div>
    </nav>


{% endblock %}

{% block body %}{% endblock %}

{% block footer %}{% endblock %}

{{ encore_entry_script_tags('app') }}
{% block javascripts %}{% endblock %}
{# <script src="{{ asset('js/bootstrap/bootstrap.bundle.js') }}"></script>#}
</body>
</html>
