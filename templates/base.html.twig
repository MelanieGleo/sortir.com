    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{ path ('app_sortie') }}">Sortir.com</a>

            {% block lien %}
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
