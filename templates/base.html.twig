                                <a class="nav-link" href="{{ path('app_index') }}">Home
                                    <span class="sr-only">(current)</span>
                                </a>
                            </li>
                            {% if app.user.administrateur %}
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('app_register') }}">Inscrire un participant</a>
                                </li>
                            {% endif %}

                            {% block autreLienProfil %}
