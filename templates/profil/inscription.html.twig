{% extends 'base.html.twig' %}

{% block title %}S'inscrire | {{ parent() }}{% endblock %}

{% block lien %}
    <a href="{{ path('app_sortie') }}">Sorties</a>
    <a href=" {{ path ('app_login') }}">Connexion</a>
{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1>S'inscrire</h1>

    {{ form_start(registrationForm) }}
    {{ form_row(registrationForm.pseudo) }}
    {{ form_row(registrationForm.motDePasseEnClair) }}
    {{ form_row(registrationForm.nom) }}
    {{ form_row(registrationForm.prenom) }}
    {{ form_row(registrationForm.telephone) }}
    {{ form_row(registrationForm.mail) }}
    {{ form_row(registrationForm.agreeTerms) }}
    {{ form_row(registrationForm.administrateur) }}
    {{ form_row(registrationForm.actif) }}

    <button type="submit" class="btn">Register</button>
    {{ form_end(registrationForm) }}
{% endblock %}
